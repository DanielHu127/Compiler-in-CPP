{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "NASM Compile",
            "type": "shell",
            "command": "nasm",
            "args": [
                "-f",
                "win64",
                "-o",
                "${fileBasenameNoExtension}.obj",
                "${file}"
            ],
            "group": "build"
        },
        {
            "label": "GCC Link",
            "type": "shell",
            "command": "ld",
            "args": [
                "-s",
                "-o",
                "${fileBasenameNoExtension}.exe",
                "${fileBasenameNoExtension}.obj",
                "-lkernel32"
            ],
            "group": "build",
            "dependsOn": ["NASM Compile"]
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "./${fileBasenameNoExtension}.exe",
            "group": "test"
        },
        {
            "label": "Build and Run",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": [
                "NASM Compile",
                "GCC Link",
                "Run"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
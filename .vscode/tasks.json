{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "NASM Compile",
            "type": "shell",
            "command": "nasm",
            "args": [
                "-f",
                "win64",
                "-o",
                "${fileBasenameNoExtension}.obj",
                "${file}"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "GCC Link",
            "type": "shell",
            "command": "ld",
            "args": [
                "-s",
                "-o",
                "${fileBasenameNoExtension}.exe",
                "${fileBasenameNoExtension}.obj",
                "-lkernel32"
            ],
            "group": "build",
            "dependsOn": [
                "NASM Compile"
            ]
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "./${fileBasenameNoExtension}.exe",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Build and Run ASM",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": [
                "NASM Compile",
                "GCC Link",
                "Run"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cpp build active file",
            "command": "c:\\Users\\HuDan\\OneDrive\\Documents\\Code Stuff\\cpp",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "c:\\Users\\HuDan\\OneDrive\\Documents\\Code Stuff"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\msys64\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}